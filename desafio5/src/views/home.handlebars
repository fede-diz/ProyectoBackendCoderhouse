<div>
    <h1>Listado de Productos</h1>
    <h3>Completá y agrega un producto nuevo</h3>

    <form id="addForm" action="/api/products/" method="post">
        <input type="text" name="title" id="title" placeholder="Título" />
        <br>
        <input type="text" name="description" id="description" placeholder="Descripción"/>
        <br>
        <input type="text" name="code" id="code" placeholder="Código" />
        <br>
        <input type="text" name="price" id="price"placeholder="Precio" />
        <br>
        <input type="text" name="stock" id="stock"placeholder="Stock" />
        <br>
        <input type="text" name="category" id="category"placeholder="Categoria" />
        <br>
        <input type="text" name="thumbnail" id="thumbnail" placeholder="Escribir 'Foto' nada más" />
        <br>
        <input type="submit" value="Agregar Producto">
    </form>
    
    <table id="productsTable">
        <thead>
            <tr>
                <th><strong>Producto</strong></th>
                <th><strong>Descripción</strong></th>
                <th><strong>Código</strong></th>
                <th><strong>Precio</strong></th>
                <th><strong>Stock</strong></th>
                <th><strong>Categoría</strong></th>
                <th><strong>Miniatura</strong></th>
            </tr>
        </thead>
        <tbody>
            {{#each data}}
            <tr>
                <td>{{this.title}}</td>
                <td>{{this.description}}</td>
                <td>{{this.code}}</td>
                <td>{{this.price}}</td>
                <td>{{this.stock}}</td>
                <td>{{this.category}}</td>
                <td>{{this.thumbnail}}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>
